                android:layout_height="450dp" app:srcCompat="@android:drawable/ic_media_play"
                android:id="@+id/imageView" android:clickable="true" android:onClick="startRecording"/>
    </TableRow>
</androidx.constraintlayout.widget.ConstraintLayout>